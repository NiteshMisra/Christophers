<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        tools:context=".fragments.Videos">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/videoRcv"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/element_videos"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="130dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/viewAll"
                android:layout_width="100dp"
                android:text="View All"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="@drawable/view_all_bg"
                android:textStyle="bold"
                android:elevation="2dp"
                android:textAllCaps="true"
                android:layout_height="35dp"/>

            <com.bosphere.fadingedgelayout.FadingEdgeLayout
                android:layout_width="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                app:fel_edge="top|bottom|left|right"
                app:fel_size_bottom="10dp"
                app:fel_size_left="10dp"
                app:fel_size_right="10dp"
                app:fel_size_top="20dp"
                android:elevation="0dp"
                android:layout_height="35dp">

                <View
                    android:layout_width="match_parent"
                    android:background="#C8A6F8"
                    android:layout_height="match_parent"/>

            </com.bosphere.fadingedgelayout.FadingEdgeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="190dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardElevation="10dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:background="#F0F0F0"
                        android:layout_height="75dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Analysis\n&amp; Practice"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:paddingTop="10dp"
                        android:textStyle="bold"
                        android:textSize="19sp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:elevation="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/accessNow"
                    android:layout_width="150dp"
                    android:text="Access Now"
                    android:layout_centerHorizontal="true"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/view_all_bg"
                    android:textStyle="bold"
                    android:elevation="2dp"
                    android:textAllCaps="true"
                    android:layout_height="35dp"/>

                <com.bosphere.fadingedgelayout.FadingEdgeLayout
                    android:layout_width="160dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    app:fel_edge="top|bottom|left|right"
                    app:fel_size_bottom="10dp"
                    app:fel_size_left="10dp"
                    app:fel_size_right="10dp"
                    app:fel_size_top="20dp"
                    android:elevation="0dp"
                    android:layout_height="35dp">

                    <View
                        android:layout_width="match_parent"
                        android:background="#C8A6F8"
                        android:layout_height="match_parent"/>

                </com.bosphere.fadingedgelayout.FadingEdgeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="25dp"
            android:layout_height="190dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginBottom="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:background="#F0F0F0"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:elevation="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/referAndEarn"
                    android:layout_width="200dp"
                    android:text="Refer &amp; Earn"
                    android:layout_centerHorizontal="true"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/view_all_bg"
                    android:textStyle="bold"
                    android:elevation="2dp"
                    android:textAllCaps="true"
                    android:layout_height="35dp"/>

                <com.bosphere.fadingedgelayout.FadingEdgeLayout
                    android:layout_width="210dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    app:fel_edge="top|bottom|left|right"
                    app:fel_size_bottom="10dp"
                    app:fel_size_left="10dp"
                    app:fel_size_right="10dp"
                    app:fel_size_top="20dp"
                    android:elevation="0dp"
                    android:layout_height="35dp">

                    <View
                        android:layout_width="match_parent"
                        android:background="#C8A6F8"
                        android:layout_height="match_parent"/>

                </com.bosphere.fadingedgelayout.FadingEdgeLayout>

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_height="190dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardElevation="10dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:background="#F0F0F0"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:elevation="20dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="200dp"
                    android:text="Rate Now"
                    android:layout_centerHorizontal="true"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/view_all_bg"
                    android:textStyle="bold"
                    android:elevation="2dp"
                    android:textAllCaps="true"
                    android:layout_height="35dp"/>

                <com.bosphere.fadingedgelayout.FadingEdgeLayout
                    android:layout_width="210dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    app:fel_edge="top|bottom|left|right"
                    app:fel_size_bottom="10dp"
                    app:fel_size_left="10dp"
                    app:fel_size_right="10dp"
                    app:fel_size_top="20dp"
                    android:elevation="0dp"
                    android:layout_height="35dp">

                    <View
                        android:layout_width="match_parent"
                        android:background="#C8A6F8"
                        android:layout_height="match_parent"/>

                </com.bosphere.fadingedgelayout.FadingEdgeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</layout>