<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <carbon.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:carbon_elevation="10dp"
        app:carbon_cornerRadius="15dp"
        android:id="@+id/layout"
        android:layout_margin="10dp"
        android:background="@color/colorWhite"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="40dp"
        app:carbon_elevationShadowColor="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:text="SSC CGL Mains 2019 Testes (1/41)"
            android:gravity="center_horizontal"
            android:textSize="13sp"
            android:textColor="@color/carbon_black"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="29 Tests"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:drawablePadding="10dp"
            android:layout_gravity="center_horizontal"
            android:drawableStart="@drawable/ic_receipt_blue_small"
            android:textSize="13sp"
            android:textColor="@color/carbon_black"
            android:layout_height="wrap_content"/>

    </carbon.widget.LinearLayout>

</carbon.widget.LinearLayout>