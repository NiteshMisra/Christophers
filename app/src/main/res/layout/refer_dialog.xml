<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F7F1FF"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refer and Earn"
        android:layout_marginStart="10dp"
        android:textColor="#3E3E3E"
        android:textSize="19sp"

        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="40dp"
        android:text="I'm inviting you to join Christophers App, they offer tutorial services to aspiring students. Here's the code 7015409037 just enter it at signup screen. You'll get 50 points."
        android:textColor="#555555"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="Cancel"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp"
        android:textStyle="bold" />

</LinearLayout>